<div class="container">
  <!-- add list of bookmarks -->
    <div class="d-flex justify-content-between my-4">
      <h1><%= @list.name %></h1>
      <%= link_to "Add a boomark", new_list_bookmark_path(@list), class: "btn btn-flat" %>
    </div>
  <p>
    Bookmarks:
  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li> Title: <%= bookmark.movie.title %>  </li>
      <li> Overview: <%= bookmark.movie.overview %>  </li>
      <li> <%= image_tag bookmark.movie.poster_url, alt: "Le Wagon", width: 200 %> </li>
      <li> Rating: <%= bookmark.movie.rating %>  </li>
      <li> Comment: <%= bookmark.comment %>  </li>
    <% end %>
    </ul>
  </p>
</div>
